<?xml version="1.0" encoding="UTF-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
	<!--
         Base application theme, dependent on API level. This theme is replaced 
		by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
	-->
	<style name="AppBaseTheme" parent="android:Theme.Light">		<!--
             Theme customizations available in newer API levels can go in res/values-vXX/styles.xml, 
			while customizations related to backward-compatibility can go here.
		-->
	</style>
	<!-- Application theme. -->
	<style name="AppTheme" parent="AppBaseTheme">		<!--
      All customizations that are NOT specific to a particular API-level can 
			go here.
		-->
	</style>
	<style name="AppThemeNoTitleBar" parent="android:Theme.Light.NoTitleBar.Fullscreen"></style>
	<style name="HeightDependsOnWeight">
		<item name="android:layout_height">0dp</item>
	</style>
	<style name="WidthDependsOnWeight">
		<item name="android:layout_width">0dp</item>
	</style>
	<style name="InGameStatsTableCell" parent="WidthDependsOnWeight">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:textSize">7sp</item>
		<item name="android:maxLines">1</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:background">@drawable/cell_border</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="InGameStatsTableNumberCell" parent="InGameStatsTableCell">
		<item name="android:layout_weight">1</item>
	</style>
	<style name="InGameStatsTableNameCell" parent="InGameStatsTableCell">
		<item name="android:layout_weight">3</item>
	</style>
	<style name="InGameStatsTableScoreCell" parent="InGameStatsTableCell">
		<item name="android:layout_weight">1</item>
	</style>
	<style name="InGameStatsTableRow">
		<item name="android:layout_width">wrap_content</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:weightSum">5</item>
	</style>
	<style name="GameActivityButton" parent="WidthDependsOnWeight">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="DetailedStatsContainer" parent="WidthDependsOnWeight">
		<item name="android:layout_height">wrap_content</item>
		<item name="android:layout_weight">1</item>
		<item name="android:orientation">vertical</item>
	</style>
	<style name="GameReviewTableCell">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:background">@drawable/cell_border</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="GameReviewTeamContainer" parent="WidthDependsOnWeight">
		<item name="android:layout_height">match_parent</item>
		<item name="android:layout_weight">1</item>
	</style>
	<style name="DialogTextView">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:padding">@dimen/standard_padding_size</item>
	</style>
	<style name="DialogButton">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="TeamReviewTableDefaultCell" parent="InGameStatsTableCell">
		<item name="android:layout_weight">1</item>
	</style>
	<style name="TeamReviewTableDidNotPlay" parent="InGameStatsTableCell">
		<item name="android:layout_weight">14</item>
	</style>
	<style name="TeamReviewTablePlayerNameCell" parent="InGameStatsTableCell">
		<item name="android:layout_weight">5</item>
	</style>
	<style name="TeamReviewTablePlayerTimeCell" parent="InGameStatsTableCell">
		<item name="android:layout_weight">2</item>
	</style>
	<style name="TeamReviewTablePlayerStats">
		<item name="android:layout_width">match_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:orientation">horizontal</item>
		<item name="android:weightSum">20</item>
	</style>
</resources>